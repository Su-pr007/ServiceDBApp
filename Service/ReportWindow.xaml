                    Height="22" Width="140" Margin="0">
                <Grid x:Name="MainGrid" Background="#FFE5E5E5" Margin="0">
                    <DataGrid x:Name="DataGridEmpRep" Margin="0" Height="Auto" Width="Auto" IsReadOnly="True"/>
                </Grid>
